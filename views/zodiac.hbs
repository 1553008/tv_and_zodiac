<style>
    li {
        list-style: none;
    }

    li img {
        width: 100%;
    }

    #zodiac-info {
        width: 40rem;
        margin: 5rem auto;
        text-align: center;
    }

    #zodiac-info img {
        width: 50%;
        margin: auto;
    }

    .card-body {
        padding-top: 0;
    }

    .card-body h4 {
        color: rgba(36, 50, 85, 1);
    }

    .btn {
        background: #cfcfcf;
    }

    .btn a {
        text-decoration: none;
        color: black;
    }

    .hidden {
        visibility: hidden;
    }
</style>
<div class="container">
    <section id="zodiac">
        <div id="zodiac-list">
            <ul class="row">
                {{#each zodiacInfo}}
                <li class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
                    <a href="" data-date="{{date}}" data-summary="{{summary}}" data-info-link="{{infoLink}}">
                        <img src="{{imgLink}}" alt="">
                    </a>
                </li>
                {{/each}}
            </ul>
        </div>
    </section>
    <section id="zodiac-info" class="hidden">
        <div class="card">
            <img class="card-img-top " src="" alt="">
            <div class="card-body">
                <h4 class="card-text date"></h4>
                <p class="card-text summary"></p>
            </div>
            <div class="btn">
                <a class="info-link" href="" target="_blank">Read more</a>
            </div>
        </div>
    </section>
</div>
<script>
    $(document).ready(function () {
        $("#zodiac-list a").click(function () {
            // Show more info of the zodiac
            $("#zodiac-info").removeClass('hidden');
            
            // Get values from clicked item
            var imgLink = $(this).children().attr('src');
            var date = $(this).data('date');            
            var summary = $(this).data('summary');            
            var infoLink = $(this).data('info-link');            

            // Append values
            $("#zodiac-info img").attr('src', imgLink);
            $("#zodiac-info h4").text(date);
            $("#zodiac-info p").text(summary);
            $("#zodiac-info .info-link").attr('href', infoLink);

            return false;
        })

    });
</script> 